<div class = "header">
    <%= render "travels/header" %>
</div>

<div class="contents_row">
  <div class="container">
    <h2 class = "sin-up">新規登録</h2>
    <%= form_with model: @user, url: user_registration_path, class: 'new_user', local: true do |f| %>

      <div class="field">
        <%= f.label :ニックネーム %><br />
        <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例) ととぽん", maxlength:"40" %>
      </div>

      <div class="field">
        <%= f.label :年齢 %><br />
        <%= f.text_field :age, class:"input-default", id:"age", placeholder:"例) 27" %>
      </div>

      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
      </div>

      <div class="field">
        <%= f.label :パスワード確認 %><br />
        <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録" %>
      </div>
    <% end %>
  </div>
</div>

<div class = "fotter">
    <%= render "travels/fotter" %>
</div>