<div class = "header">
    <%= render "travels/header" %>
</div>

<div class = "container">
  <h2 class = "login-title">ログイン</h2>

  <%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"登録時のメールアドレス", autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :パスワード %><br />
     <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
   </div>

    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>
</div>

<div class = "fotter">
    <%= render "travels/fotter" %>
</div>
